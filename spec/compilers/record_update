record Record {
  name: String
}

component Main {
  property record : Record = { name = "Doe" }

  fun test : Record {
    { record | name = "John" }
  }

  fun render : Html {
    try {
      test()

      <div/>
    }
  }
}
--------------------------------------------------------------------------------
const A = _createRecord({
  a: [
    "name",
    Decoder.string
  ]
})

class B extends _C {
  constructor(props) {
    super(props)

    this._d({
      b: [
        null,
        new A({
          a: `Doe`
        })
      ]
    })
  }

  a() {
    return _update(this.b, { a: `John` })
  }

  render() {
    return (() => {
      this.a()

      return _h("div", {})
    })()
  }
}

B.displayName = "Main"
