component Main {
  style test {
    color: yellow;

    @media (max-width: 300px) {
      if (true) {
        color: red;
      }
    }
  }

  fun render : Html {
    <div::test/>
  }
}
--------------------------------------------------------------------------------
class A extends _C {
  $aa() {
    const _ = {};

    (true ? Object.assign(_, {
      [`--a-a`]: `red`
    }) : null);

    return _;
  }

  render() {
    return _h("div", {
      className: `aa`,
      style: _style([this.$aa()])
    });
  }
};

A.displayName = "Main";

_insertStyles(`
.aa {
  color: yellow;
}

@media (max-width: 300px) {
  .aa {
    color: var(--a-a);
  }
}
`);
