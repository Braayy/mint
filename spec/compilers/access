record X {
  name: String
}

component A {
  fun a : String {
    x.name
  } where {
    x = { name = "test" }
  }

  fun render : Html {
    <div/>
  }
}
--------------------------------------------------------------------------------
class $A extends Component {
  a() {
    let x = new Record({
      name: `test`
    })

    return x.name
  }

  render() {
    return _createElement("div", {})
  }
}
