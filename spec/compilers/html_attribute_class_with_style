component Main {
  style base {
    width: 100%;
  }

  fun render : Html {
    <div::base class="something">
    </div>
  }
}
--------------------------------------------------------------------------------
class A extends _C {
  render() {
    return _h("div", {
      className: `something` + ` foo-a`
    });
  }
};

A.displayName = "Main";

_insertStyles(`
.foo-a {
  width: 100%;
}
`);
