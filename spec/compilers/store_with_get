store Test {
  state test : String = ""

  get hello : String {
    "hello"
  }
}

component Main {
  connect Test exposing { test }

  fun render : String {
    ""
  }
}
--------------------------------------------------------------------------------
class A extends Component {
  get test() {
    return B.a
  }

  componentWillUnmount() {
    B._unsubscribe(this)
  }

  componentDidMount() {
    B._subscribe(this)
  }

  render() {
    return ``
  }
}

A.displayName = "Main"

const B = new(class extends Store {
  constructor() {
    super()

    this.state = {
      a: ``
    }
  }

  get a() {
    return this.state.a
  }

  get b() {
    return `hello`
  }
})
