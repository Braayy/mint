component A {
  style test {
    & div {
      color: {color};
    }
    &:focus {
      color: red;
    }
  }

  get color : String {
    "blue"
  }

  fun render : Html {
    <div::test/>
  }
}
--------------------------------------------------------------------------------
class $A extends Component {
  get color() {
    return `blue`
  }

  render() {
    return _createElement("div", {
      className: `a-test`,
      style: {
        [`--a-test-div-color`]: this.color
      }
    })
  }
}

_insertStyles(`
  .a-test {

  }

  .a-test div {
    color: var(--a-test-div-color);
  }

  .a-test:focus {
    color: red;
  }
`)
