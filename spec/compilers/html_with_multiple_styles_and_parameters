component Main {
  style one {
    color: red;
  }

  style two(color : String) {
    color: #{color};
  }

  fun render : Html {
    <div::one::two("blue")>
    </div>
  }
}
--------------------------------------------------------------------------------
class A extends _C {
  $foo-b(a) {
    const _ = {
      [`--a-a`]: a
    };

    return _;
  }

  render() {
    return _h("div", {
      className: `foo-a foo-b`,
      style: _style([this.$foo-b(`blue`)])
    });
  }
};

A.displayName = "Main";

_insertStyles(`
.foo-a {
  color: red;
}

.foo-b {
  color: var(--a-a);
}
`);
