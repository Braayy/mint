component Main {
  style test {
    color: yellow;

    case (true) {
      true => color: yellow;
      => color: cyan;
    }

    if (true) {
      color: red;
    } else {
      color: blue;
    }
  }

  fun render : Html {
    <div::test/>
  }
}
--------------------------------------------------------------------------------
class A extends _C {
  $aa() {
    const _ = {};

    (() => {
      let a = true;

      if (_compare(a, true)) {
        Object.assign(_, {
          [`--a-a`]: `yellow`
        })
      } else {
        Object.assign(_, {
          [`--a-a`]: `cyan`
        })
      };
    })();

    (true ? Object.assign(_, {
      [`--a-a`]: `red`
    }) : Object.assign(_, {
      [`--a-a`]: `blue`
    }));

    return _;
  }

  render() {
    return _h("div", {
      className: `aa`,
      style: _style([this.$aa()])
    });
  }
};

A.displayName = "Main";

_insertStyles(`
.aa {
  color: var(--a-a, yellow);
}
`);
