component Main {
  property background : String = "blue"

  style test {
    background: {background};
    color: red;
  }

  fun render : Html {
    <div::test>
    </div>
  }
}
--------------------------------------------------------------------------------
class A extends _C {
  constructor(props) {
    super(props)

    this._d({
      a: [
        null,
        `blue`
      ]
    })
  }

  _a() {
    const _ = {
      [`--a-a`]: this.a
    }

    return _
  }

  render() {
    return _h("div", {
      className: `a`,
      style: _style([this._a()])
    })
  }
}

A.displayName = "Main"

_insertStyles(`
