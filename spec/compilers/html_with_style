component Main {
  property background : String = "blue"

  style test {
    background: {background};
    color: red;
  }

  fun render : Html {
    <div::test>
    </div>
  }
}
--------------------------------------------------------------------------------
class A extends Component {
  constructor(props) {
    super(props)

    this.defaultProps = {
      a: `blue`
    }
  }

  get a() {
    return this.props.a || this.defaultProps.a
  }

  render() {
    return _createElement("div", {
      className: `main-test`,
      style: {
        [`--main-test-background`]: this.a
      }
    })
  }
}

A.displayName = "Main"

_insertStyles(`
  .main-test {
    background: var(--main-test-background);
    color: red;
  }
`)
