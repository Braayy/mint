component Main {
  style test(color : String) {
    color: #{color};
  }

  fun render : Html {
    <div::test("red")/>
  }
}
--------------------------------------------------------------------------------
class A extends _C {
  $aa(a) {
    const _ = {
      [`--a-a`]: a
    };

    return _;
  }

  render() {
    return _h("div", {
      className: `aa`,
      style: _style([this.$aa(`red`)])
    });
  }
};

A.displayName = "Main";

_insertStyles(`
.aa {
  color: var(--a-a);
}
`);
