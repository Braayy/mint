component Main {
  style base {
    color: red;
  }

  render : Html {
    <div::base>
    </div>
  }
}
----------------------------------------------HtmlElementStyleOutsideOfComponent
module X {
  render : Html {
    <div::base/>
  }
}

component Main {
  render : Html {
    X.render()
  }
}
------------------------------------------HtmlElementReferenceOutsideOfComponent
module X {
  render : Html {
    <div as x/>
  }
}

component Main {
  render : Html {
    X.render()
  }
}
----------------------------------------HtmlComponentReferenceOutsideOfComponent
module X {
  render : Html {
    <Test as x/>
  }
}

component Test {
  render : Html {
    <div/>
  }
}

component Main {
  render : Html {
    X.render()
  }
}
