component Main {
  fun test : Number {
    value
  } where {
    value =
      10
  }

  fun render : String {
    ""
  }
}
---------------------------------------------------------------StatementNotTuple
component Main {
  fun render : String {
    x
  } where {
    x, y, z = "hello"
  }
}
----------------------------------------------------------StatementTupleMismatch
component Main {
  fun render : String {
    x
  } where {
    x, y, z = {"hello", "a"}
  }
}
