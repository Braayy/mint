component Main {
  test : Number {
    value
  } where {
    value =
      10
  }

  render : String {
    ""
  }
}
---------------------------------------------------------------StatementNotTuple
component Main {
  render : String {
    x
  } where {
    {x, y, z} = "hello"
  }
}
----------------------------------------------------------StatementTupleMismatch
component Main {
  render : String {
    x
  } where {
    {x, y, z} = {"hello", "a"}
  }
}
------------------------------------------------------InlineFunctionTypeMismatch
module Test {
  test1(a : Number) : String {
    ""
  } where {
    test2 = (a : Number) : String {
      0
    }
  }
}
