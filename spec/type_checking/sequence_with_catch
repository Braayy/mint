--------------------------------------------------------------SequenceCatchedAll
module Promise {
  reject (input : a) : Promise(a, b) {
    ``
  }
}

component Main {
  test : Promise(Never, Bool) {
    sequence {
      blah =
        Promise.reject(0)

      true
    } catch Number => error {
      false
    } catch {
      false
    }
  }

  render : Html {
    try {
      test()

      <div/>
    }
  }
}
